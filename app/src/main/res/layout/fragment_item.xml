<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Inner_Fragment.fragmentItem">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="410dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ImageView_ItemImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/ImageView_itemLocation"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_btn"
                android:src="@drawable/ic_baseline_location_searching_24"
                android:theme="@style/Theme.MaterialComponents" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/default_text"
            android:textSize="15sp" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#C5C0C0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_details"

            android:textSize="20sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/item_brand"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_Brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/default_text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/item_type"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/default_text"
                android:textSize="15sp" />

        </GridLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#C5C0C0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/item_description" />

        <TextView
            android:id="@+id/textView_itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/default_text" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#C5C0C0" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/item_distributor"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/tv_itemDistributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="130dp"
                android:fontFamily="sans-serif"
                android:text="@string/default_text"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImage_itemDistributor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_launcher_background" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>