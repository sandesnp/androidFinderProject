<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Inner_Fragment.fragmentUserCreate">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPostProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/red_background_clipart" />

    <TextView
        android:id="@+id/tvPostUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPostProfile"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/default_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPostEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPostUserName"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/default_text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etPostPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPostEmail"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:autofillHints="@string/default_text"
        android:inputType="textPassword"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/etPostPasswordCheck"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPostPassword"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:autofillHints="@string/default_text"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPostUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPostPasswordCheck"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/btnshop"
        android:text="@string/reg_shop_button" />

</RelativeLayout>